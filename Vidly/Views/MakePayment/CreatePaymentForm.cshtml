@model Vidly.Models.MakePayment
@{
    ViewBag.Title = "CreatePaymentForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Welcome to CreatePaymentForm Platform</h2>

@using (Html.BeginForm("MakePayment", "MakePayment"))

{@Html.ValidationSummary(true, "Please fix the following errors")
<div class="form-group">
    @Html.LabelFor(m => m.FirstName)
    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.FirstName)
    @*form-control above reps a class that is defined in bootstrap that gives our form a good look and feel*@
</div>
<div class="form-group">
    @Html.LabelFor(m => m.LastName)
    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.LastName)
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Email)
    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Email)
</div>
<div class="form-group">
    @Html.LabelFor(m => m.CardNumber)
    @Html.TextBoxFor(m => m.CardNumber, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.CardNumber)
</div>
<div class="form-group">
    @Html.LabelFor(m => m.ExpiryDate)
    @Html.TextBoxFor(m => m.ExpiryDate, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.ExpiryDate)
</div>
<div class="form-group">
    @Html.LabelFor(m => m.SecurityCode)
    @Html.TextBoxFor(m => m.SecurityCode, "SecurityCode(Cvv)", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.SecurityCode)
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Amount)
    @Html.TextBoxFor(m => m.Amount, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Amount)
</div>
<div class="checkbox">
    <label>
        @Html.CheckBoxFor(m => m.IsOver18) I Am Over 18 ?
    </label>
</div>
<button type="submit" class="btn btn-primary">Pay</button>

}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}


